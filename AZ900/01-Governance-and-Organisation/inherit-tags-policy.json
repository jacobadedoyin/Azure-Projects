{
  "properties": {
    "displayName": "Inherit Environment and AccountableParty Tags",
    "description": "Ensures resources inherit Environment and AccountableParty tags from their Resource Group.",
    "policyRule": {
      "if": {
        "allOf": [
          { "field": "tags['Environment']", "exists": "false" },
          { "field": "tags['AccountableParty']", "exists": "false" }
        ]
      },
      "then": {
        "effect": "modify",
        "details": {
          "roleDefinitionIds": [
            "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
          ],
          "operations": [
            {
              "operation": "add",
              "field": "tags['Environment']",
              "value": "[resourceGroup().tags['Environment']]"
            },
            {
              "operation": "add",
              "field": "tags['AccountableParty']",
              "value": "[resourceGroup().tags['AccountableParty']]"
            }
          ]
        }
      }
    }
  }
}
